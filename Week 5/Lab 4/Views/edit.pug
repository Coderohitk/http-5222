doctype html
html
  head
    title Edit Movie
    link(rel="stylesheet", href="/style.css")  
  body
    .container
      h1 Edit Movie
      form(action=`/edit/${movie._id}`, method="POST")
        label(for="title") Movie Title:
        input(type="text", id="title", name="title" value=movie.title required)
        
        label(for="year") Year:
        input(type="number", id="year", name="year" value=movie.year required)
        
        label(for="rating") Rating:
        select(id="rating", name="rating")
          option(value="G", selected=movie.rating=="G") G
          option(value="PG", selected=movie.rating=="PG") PG
          option(value="PG-13", selected=movie.rating=="PG-13") PG-13
          option(value="R", selected=movie.rating=="R") R

        button(type="submit") Update Movie
      a(href="/") Back to Movie List
