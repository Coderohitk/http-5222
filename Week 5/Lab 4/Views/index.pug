doctype html
html
  head
    title Movies List
    link(rel="stylesheet", href="/style.css")
  body
    .container
      h1 Movies List
      a.btn.btn-add(href="/add") Add New Movie
      a.btn.btn-add(href="/update-rating") Update Rating
      a.btn.btn-add(href="/delete-by-rating") Delete by Rating
      .movie-list
        each movie in movies
          .movie-card
            .movie-info
              h3.movie-title #{movie.title}
              p.movie-year Year: #{movie.year}
              p.movie-rating Rating: #{movie.rating}
            .actions
              a.btn.btn-edit(href=`/edit/${movie._id}`)  Edit
              a.btn.btn-delete(href=`/delete/${movie._id}`)  Delete
