doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    //- Title is dynamic based on the 'title' variable passed to the template
    title #{title} | Test website
    link(rel="stylesheet", href="/styles.css")
  body
    //- Header section with site navigation
    header#header
      h2#site-name
        a(href="/") Test website
      nav
        ul
          each link in menu
            li
              a(href=link.path) #{link.name}
    main#main
      //- Admin menu form
      form(action="/admin/menu")
        button(type="submit") Menu 
      block layout-content 
    include footer.pug 